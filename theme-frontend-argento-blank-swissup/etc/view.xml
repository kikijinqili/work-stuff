<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="product_page_image_medium" type="image">
                <width>700</width>
                <height>560</height>
            </image>
            <image id="product_page_image_medium_no_frame" type="image">
                <width>700</width>
                <height>700</height>
                <frame>false</frame>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <var name="argento">
            <var name="listing">
                <var name="grid">
                    <var name="actions">
                        <var name="position">default</var>
                    </var>
                </var>
                <var name="list">
                    <var name="actions">
                        <var name="position">default</var>
                    </var>
                </var>
            </var>
        </var>
    </vars>
    <vars module="Argento_Theme">
        <var name="sticky_add_to_cart">
            <var name="enabled">0</var>
            <!-- <var name="offset_top">0</var>
            <var name="parent">.page-wrapper</var>
            <var name="media">(min-width: 768px) and (min-height: 600px)</var> -->
        </var>
        <var name="photo_in_description">
            <var name="image_class">argento-float-photo</var>
            <var name="add_classes">hidden-xs hidden-sm</var> <!-- hide on screens less 1025px -->
            <!-- <var name="target">#product\\.info\\.description[data-role=content]</var> -->
        </var>
    </vars>
</view>
