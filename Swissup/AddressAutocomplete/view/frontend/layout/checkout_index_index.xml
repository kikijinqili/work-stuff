<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="address-autocomplete" xsi:type="array">
                            <item name="component" xsi:type="string">Swissup_AddressAutocomplete/js/address-autocomplete</item>
                            <item name="config" xsi:type="array">
                                <item name="selectors" xsi:type="array">
                                    <item name="0" xsi:type="string">input[name="street[0]"]</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
